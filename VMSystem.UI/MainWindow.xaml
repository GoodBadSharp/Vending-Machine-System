        xmlns:local="clr-namespace:VMSystem.UI"
        mc:Ignorable="d"
        Title="VM System Manager" Height="400" Width="700" ResizeMode="CanResize"  WindowStartupLocation="Manual" Left="200" Top="200" MinWidth="700" MinHeight="400">
