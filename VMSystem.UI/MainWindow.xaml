        <Button x:Name="editProductButton" Content="Edit Products" HorizontalAlignment="Left" Margin="20,120,0,0" VerticalAlignment="Top" Width="96" Click="editProductButton_Click"/>
        <ListBox HorizontalAlignment="Left" Margin="137,17,0,17" Width="1"/>
        <Frame x:Name="mainFrame" Margin="152,17,10,17" Loaded="mainFrame_Loaded" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
